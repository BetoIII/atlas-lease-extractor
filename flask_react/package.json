{
  "name": "@atlas/monorepo",
  "version": "1.0.0",
  "description": "Atlas Data Co-op Microfrontend Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:marketing": "npm run dev -w @atlas/marketing",
    "dev:app": "npm run dev -w @atlas/app",
    "dev:all": "npm run dev:marketing & npm run dev:app",
    "build:marketing": "pnpm --filter @atlas/marketing build",
    "build:app": "pnpm --filter @atlas/app build",
    "build:all": "pnpm run build:packages && pnpm --filter @atlas/marketing build",
    "build:packages": "pnpm --filter @atlas/ui build && pnpm --filter @atlas/auth build && pnpm --filter @atlas/config build",
    "lint:marketing": "pnpm --filter @atlas/marketing lint",
    "lint:app": "pnpm --filter @atlas/app lint",
    "lint:all": "pnpm --filter @atlas/marketing lint && pnpm --filter @atlas/app lint",
    "test:app": "pnpm --filter @atlas/app test",
    "test:marketing": "pnpm --filter @atlas/marketing test",
    "test": "pnpm run test:app && pnpm run test:marketing",
    "deploy:marketing": "cd apps/marketing && vercel --prod",
    "deploy:app": "cd apps/app && vercel --prod",
    "deploy:all": "pnpm run deploy:marketing && pnpm run deploy:app",
    "clean": "pnpm --filter @atlas/marketing clean && pnpm --filter @atlas/app clean",
    "install:all": "pnpm install",
    "dev": "npm run dev:all",
    "build": "pnpm build:all",
    "lint": "pnpm lint:all",
    "ci": "pnpm lint:all && pnpm run -r --if-present typecheck && pnpm test"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.4",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-aspect-ratio": "^1.1.3",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-context-menu": "^2.2.7",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-menubar": "^1.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-toggle": "^1.1.3",
    "@radix-ui/react-toggle-group": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@react-pdf-viewer/highlight": "^3.12.0",
    "better-auth": "^1.3.2",
    "canvas": "^3.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.1",
    "lucide-react": "^0.330.0",
    "next": "^14.1.0",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^3.11.174",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "react-resizable-panels": "^2.1.6",
    "recharts": "^3.1.0",
    "sonner": "^1.7.0",
    "tailwind-merge": "^2.2.1",
    "vaul": "^1.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.4.2",
    "null-loader": "^4.0.1",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
