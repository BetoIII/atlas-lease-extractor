{
  "name": "@atlas/auth",
  "version": "1.0.0",
  "description": "Shared authentication logic for Atlas Data Co-op",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts --format esm,cjs --dts --external react,react-dom,better-auth,pg",
    "dev": "tsup src/index.ts src/server.ts --format esm,cjs --dts --external react,react-dom,better-auth,pg --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "better-auth": "^1.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}