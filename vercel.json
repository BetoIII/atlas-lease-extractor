{
  "version": 2,
  "name": "atlas-marketing",
  "buildCommand": "cd flask_react && pnpm --filter @atlas/marketing build",
  "outputDirectory": "flask_react/apps/marketing/.next",
  "installCommand": "cd flask_react && pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://app.atlasdata.coop",
    "NEXT_PUBLIC_MARKETING_URL": "https://atlasdata.coop",
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "https://app.atlasdata.coop/",
      "permanent": false
    },
    {
      "source": "/app/:path*",
      "destination": "https://app.atlasdata.coop/:path*", 
      "permanent": false
    }
  ]
}